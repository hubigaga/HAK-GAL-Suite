# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text
*.pyw text
*.pyx text
*.pyz text
*.pyi text

# JavaScript/TypeScript files
*.js text
*.jsx text
*.ts text
*.tsx text
*.json text

# Web files
*.html text
*.css text
*.scss text
*.sass text

# Documentation
*.md text
*.txt text
*.rst text

# Config files
.gitignore text
.gitattributes text
*.yml text
*.yaml text
*.toml text
*.ini text
*.cfg text

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.pkl binary
*.db binary
*.sqlite binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary
